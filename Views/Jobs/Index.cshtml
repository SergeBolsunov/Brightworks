@model IEnumerable<BrightWorks.Models.Job>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if(User.IsInRole("Manager"))
    {
        <text>
        @Html.ActionLink("Create New", "Create")
        </text>
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descrip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foreman)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descrip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Foreman.FullName)
        </td>
        <td>
            @if(User.IsInRole("Manager"))
            {
                <text>
                @Html.ActionLink("Edit", "Edit", new { id = item.JobID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.JobID })
                </text>
            }
            
        </td>
    </tr>
}

</table>
